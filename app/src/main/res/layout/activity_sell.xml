<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.stephen.mxchange.buy_book">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:background="#B6B6B4"
        android:layout_marginTop="25dp"
        android:minHeight="50dp"
        android:minWidth="10000dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:layout_marginRight="35dp" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:background="#B6B6B4"
        android:minHeight="50dp"
        android:minWidth="1000dp"
        android:textAlignment="center"
        android:layout_below="@+id/spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />



    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:background="#B6B6B4"
        android:minHeight="50dp"
        android:minWidth="1000dp"
        android:layout_below="@+id/spinner2"
        android:layout_alignLeft="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2"
        android:layout_marginTop="42dp"
        android:layout_marginRight="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:id="@+id/price"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/spinner3"
        android:layout_alignRight="@+id/spinner3"
        android:layout_alignEnd="@+id/spinner3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/textView5"

        android:textColor="#FFFFFF"
        android:layout_toStartOf="@+id/price"
        android:layout_above="@+id/textView"
        android:layout_toLeftOf="@+id/price" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find"
        android:id="@+id/Find"
        android:background="#B6B6B4"
        android:layout_below="@+id/editText7"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText5"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edition:"
        android:id="@+id/textView"
        android:layout_toStartOf="@+id/editText5"
        android:autoText="true"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/price"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText7"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:autoText="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/editText5"
        android:layout_alignRight="@+id/Find"
        android:layout_alignEnd="@+id/Find"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title:"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignBottom="@+id/editText7" />


</RelativeLayout>